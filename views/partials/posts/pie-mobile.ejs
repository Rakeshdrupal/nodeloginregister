<div class="text-center" style="position: relative;">
  <p data-score="<%= post.postId %>" class="hidden score-mobile" style="padding: 8px 0; margin: 0;">
    <% if (post.getScore() > 0) { %>
    <span class="text-success"><strong><%= post.getScore() %></strong></span>
    <% } else if (post.getScore() < 0) { %>
    <span class="text-danger"><strong><%= post.getScore() %></strong></span>
    <% } else { %>
    <span class="text-muted"><strong><%= post.getScore() %></strong></span>
    <% } %>
  </p>
  <% var total = parseInt(post.upvotes()) + parseInt(post.downvotes()); %>
  <div data-votes="<%= post.postId %>" class="donut text-center" style="position: absolute; top: -0px; height: 40px;">
    <% if (total == 0) { %>
    <span class="hidden" data-peity='{ "width": "100%", "fill": ["#D45252", "#6EBF7D", "#eeeeee"], "innerRadius": 8, "radius": 18 }'>0,0,1</span>
    <% } else { %>
    <span class="hidden" data-peity='{  "width": "100%", "fill": ["#D45252", "#6EBF7D", "#eeeeee"], "innerRadius": 8, "radius": 18 }'><%= post.downvotes() %>,<%= post.upvotes() %>,0</span>
    <% } %>
  </div>
</div>