<!DOCTYPE HTML>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0"/>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="description" content="">
    <title><%= title %></title>
    <link rel="shortcut icon" href="/favicon.ico"/>
    <%- css('main') %>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script>
      document.documentElement.className = document.documentElement.className.replace("no-js","js");
    </script>
    <%- js('application') %>
  </head>
<body>
 <div class="container container-fluid">
<div id="flash-messages">
  <% if (messages.errors) { %>
    <% messages.errors.forEach(function(error) { %>
    <div class="alert alert-danger fade in">
      <p><i class="fa fa-lg fa-fw fa-warning"></i> <%= error.msg %></p>
    </div>
    <% }); %>
  <% } else if (messages.info) { %>
    <% messages.info.forEach(function(info) { %>
    <div class="alert alert-info fade in">
      <p>
        <i class="fa fa-lg fa-fw fa-info-circle"></i> <%= info.msg %>
      </p>
    </div>
    <% }); %>
  <% } else if (messages.success) { %>
    <% messages.success.forEach(function(success) { %>
    <div class="alert alert-success fade in">
      <p><i class="fa fa-lg fa-fw fa-check"></i> <%= success.msg %></p>
    </div>
    <% }); %>
  <% } %>
</div>
 <%- body %>
 </div>
</body>
</html>

